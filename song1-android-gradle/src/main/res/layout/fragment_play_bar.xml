<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roundImage="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp">

  <RelativeLayout
      android:id="@+id/bottom"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bottom_play_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true">
        <ImageButton
            android:id="@+id/bottom_player_list"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_device_list"
            android:contentDescription="@null"/>
        <com.song1.musicno1.ui.IocTextView
            android:id="@+id/deviceNumView"
            android:visibility="gone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="28dp"
            android:text="0"/>
    </RelativeLayout>

    <View
        android:id="@+id/gap"
        android:background="#6F9140"
        android:layout_toLeftOf="@id/bottom_play_list_container"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_width="1dp"
        android:layout_centerVertical="true"
        android:layout_height="30dp"/>

    <ImageButton
        android:id="@+id/bottom_play"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/gap"
        android:background="@null"
        android:src="@drawable/play_small_disable"
        android:scaleType="fitCenter"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="@null"
        android:clickable="false"/>


    <RelativeLayout
        android:layout_toLeftOf="@id/bottom_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <com.song1.musicno1.ui.RoundImageView
          android:id="@+id/bottom_album_art"
          android:background="@android:color/transparent"
          android:src="@drawable/default_album_art_small"
          android:layout_centerVertical="true"
          android:layout_marginLeft="4dp"
          android:layout_width="50dp"
          android:layout_height="50dp"
          roundImage:mBorderThickness="2dp"
          roundImage:mBorderColor="@color/white"
          android:contentDescription="@null"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toRightOf="@id/bottom_album_art"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:layout_marginLeft="10dp">

        <com.song1.musicno1.views.AlwaysMarqueeTextView
            android:id="@+id/bottom_title"
            android:textSize="@dimen/list_item_title_text_size"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bottom_subtitle"
            android:textColor="@color/subtitle_text_color"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/position_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/top"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/top_slide_down"
        android:background="@null"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_slide_down"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/timer"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_timer"
        android:layout_width="54dp"
        android:layout_height="54dp"/>

    <TextView
        android:id="@+id/timer_time"
        android:layout_marginTop="48dp"
        android:layout_alignLeft="@id/timer"
        android:layout_alignRight="@id/timer"
        android:textSize="8sp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.song1.musicno1.views.AlwaysMarqueeTextView
        android:id="@+id/top_title"
        android:paddingTop="8dp"
        android:textSize="@dimen/list_item_title_text_size"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:layout_toRightOf="@id/top_slide_down"
        android:layout_toLeftOf="@id/timer"
        android:layout_width="match_parent"
        android:layout_height="34dp"/>

    <TextView
        android:id="@+id/top_subtitle"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/subtitle_text_color"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/top_slide_down"
        android:layout_toLeftOf="@id/timer"
        android:layout_below="@id/top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </RelativeLayout>

  <FrameLayout
      android:layout_alignParentBottom="true"
      android:layout_width="match_parent"
      android:layout_height="1dp">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
      </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
  </FrameLayout>

</RelativeLayout>